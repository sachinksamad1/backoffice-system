{
  "compileOnSave": false,
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backoffice-system/*": ["apps/backend/src/main.ts"],
      "@backoffice-system/api-client": ["libs/api-client/src/index.ts"],
      "@backoffice-system/shared-ui": ["libs/shared-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
